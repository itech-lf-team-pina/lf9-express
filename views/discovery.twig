
{% extends 'layout.twig' %}

{% block body %}
    <div class="container-fluid text-center margin-top">
        <h1>{{title}}</h1>
        <br>
        <div class="container">
            <label for="inputUsername" class="form-label">Nutzername</label>
            <input type="text" id="inputUsername" class="form-control">

            <label for="inputPassword" class="form-label">Passwort</label>
            <input type="password" id="inputPassword" class="form-control">
            <br>
            <input class="btn btn-primary" id="user-login-button" type="submit" value="Authentifizieren">
        </div>
    </div>
    <script src="/javascripts/token.js"></script>

{% endblock %}
