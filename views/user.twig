
{% extends 'layout.twig' %}

{% block body %}
    <div class="container-fluid text-center margin-top">
        <h1>{{title}}</h1>
        <br>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
        {% endif %}

        <br>
        <br>
        <h1>Anmeldung</h1>
        <div class="container">
            <form>
                <div class="form-group">
                    <label for="inputUsername" class="form-label">Nutzername</label>
                    <input autocomplete="username" type="text" id="inputUsername" class="form-control">

                    <label for="inputPassword" class="form-label">Passwort</label>
                    <input autocomplete="current-password" type="password" id="inputPassword" class="form-control">
                    <br>
                    <button class="btn btn-primary" id="user-login-button">Authentifizieren</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="/javascripts/login.js"></script>
{% endblock %}
